if [ -e "$MK_CONFDIR/dir_size.cfg" ]
then
    echo '<<<dir_size>>>'
    grep "^\/.*\/" $MK_CONFDIR/dir_size.cfg | \
    while read path
    do 
        /usr/bin/du -s $path
    done
fi

