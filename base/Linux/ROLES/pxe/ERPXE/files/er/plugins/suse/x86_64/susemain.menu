{% from 'nslookup.sls' import lookup with context %}
{% from 'ROLES/pxe/ERPXE/os_map.sls' import os with context %}
{% set os_name = 'SLES/' + os['SLES']['basearch'] + '/' + os['SLES']['version'] %}
{% set base_url = 'http://' + lookup['hdtr']['ftp01'] %}
LABEL {{ os_name }}
    KERNEL {{ base_url }}/os/Linux/Suse/{{ os_name }}/boot/x86_64/loader/linux
    INITRD {{ base_url }}/os/Linux/Suse/{{ os_name }}/boot/x86_64/loader/initrd
    APPEND autoyast=http://{{ lookup['hdtr']['pxe'] }}/pxe/ks/template/Linux/Suse/autoinst.xml install={{ base_url }}/os/Linux/Suse/{{ os_name }} splash=verbose showopts
